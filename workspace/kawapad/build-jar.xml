<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project kawapad">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/.."/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/kawapad.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="kawapad.KawapadFrame"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.jarfile}/bin"/>
            <fileset dir="${dir.workspace}/lib-evaluators/bin"/>
            <fileset dir="${dir.workspace}/lib-lamu/bin"/>
            <fileset dir="${dir.workspace}/lib-kawautils/bin"/>
            <fileset dir="${dir.workspace}/lib-loggerutils/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/lib-kawautils/lib/kawa.jar"/>
        </jar>
    </target>
</project>
